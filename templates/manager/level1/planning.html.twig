{# templates/manager/planning.html.twig #}
{% extends 'base_bo.html.twig' %}

{% block title %}Mon Planning{% endblock %}

{% block body %}
    <h1>Mon Planning</h1>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Titre</th>
                <th>Status</th>
                <!-- autres colonnes si nécessaire -->
            </tr>
        </thead>
        <tbody>
        {% for interview in interviews %}
            <tr>
                <td>{{ interview.date|date('Y-m-d H:i') }}</td>
                <td>{{ interview.title }}</td>
                <td>{{ interview.status }}</td>
                <!-- autres détails si nécessaire -->
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun entretien prévu</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
